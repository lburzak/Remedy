{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Remedy",
    "license": {
      "name": "MIT"
    }
  },
  "paths": {
    "/product/{id}": {
      "get": {
        "summary": "Single product with ID",
        "operationId": "getProduct",
        "tags": [
          "product"
        ],
        "responses": {
          "200": {
            "description": "Single product with ID",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Product"
                }
              }
            }
          }
        }
      }
    },
    "/packaging": {
      "get": {
        "summary": "List of packagings",
        "operationId": "getPackagings",
        "tags": [
          "packaging"
        ],
        "parameters": [
          {
            "name": "ean",
            "in": "query",
            "description": "Packaging European Article Number",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of packagings",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Packaging"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Product": {
        "type": "object",
        "required": [
          "id",
          "name",
          "commonName",
          "potency",
          "form",
          "activeSubstance",
          "atc"
        ],
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "tag": {
            "type": "string"
          }
        }
      },
      "Registration": {
        "type": "object",
        "required": [
          "entityInCharge",
          "procedureType",
          "licenceNumber",
          "licenceExpirationDate"
        ]
      },
      "Packaging": {
        "type": "object",
        "required": [
          "ean",
          "size",
          "unit",
          "accessability"
        ],
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "productId": {
            "type": "integer",
            "format": "int32"
          },
          "size": {
            "type": "integer",
            "format": "int32"
          },
          "unit": {
            "type": "string"
          },
          "ean": {
            "type": "string"
          },
          "accessabilityCategory": {
            "type": "string",
            "enum": [
              "OTC",
              "Rpw",
              "Lz",
              "Rp",
              "Rpz",
              "LzRp",
              "xLzRp",
              "null"
            ]
          },
          "deleted": {
            "type": "string"
          }
        }
      },
      "Error": {
        "type": "object",
        "required": [
          "code",
          "message"
        ],
        "properties": {
          "code": {
            "type": "integer",
            "format": "int32"
          },
          "message": {
            "type": "string"
          }
        }
      }
    }
  }
}